[user]
    name = Erik R. Yverling
[core]
    autocrlf = input
    editor = vim
[color]
    ui = auto
[alias]
    # Standard
    b = branch
    ch = checkout
    co = commit
    f = fetch
    pl = pull
    pu = push
    s = status

    # Checkout
    chm = !sh -c 'git checkout master && git pull'
    chd = !sh -c 'git checkout develop && git pull'
    chb = checkout -b

    # Remove branch
    rb = b -D
    rab = "!git branch | grep -v "develop" | sed 's/^[ *]*//' | sed 's/^/git branch -D /' | bash"

    # Commit
    cf = commit -am "Fix"

    # Stash
    st = stash
    stp = stash pop
    stc = stash clear
    sl = stash list

    # Log
    ll = "!git --no-pager log --pretty=format:'%C(green)%h%Creset %C(cyan)<%an>%Creset \"%s\" %C(blue)(%cr)%Creset ' --abbrev-commit -10"
    lll = "!git --no-pager log --pretty=format:'%C(green)%h%Creset %C(cyan)<%an>%Creset \"%s\" %C(blue)(%cr)%Creset ' --abbrev-commit"
    lgg = "!git --no-pager log --graph --pretty=format:'%C(green)%h%Creset -%C(yellow)%d%Creset \"%s\" %C(blue)(%cr)%Creset %C(cyan)<%an>' --abbrev-commit"
    lgcf = "!git --no-pager log --pretty=format:'%C(green)%h%Creset %C(cyan)<%an>%Creset \"%s\" %C(blue)(%cr)%Creset ' --abbrev-commit --follow"
    lgb = "!git --no-pager log --pretty=format:'%C(green)%h%Creset %C(cyan)<%an>%Creset \"%s\" %C(blue)(%cr)%Creset ' --abbrev-commit -n $(git rev-list master.. --count)"

    # Diff
    d = diff
    dn = diff --name-only
    do = diff origin
    don = diff --name-only origin

    # Show
    sn = show HEAD --name-only

    # Rebase
    rom = !sh -c 'git stash && git fetch && git rebase origin/master && git stash pop'
    rod = !sh -c 'git stash && git fetch && git rebase origin/develop && git stash pop'
    ri = !sh -c 'git stash && git rebase -i && git stash pop'
    ri2 = !sh -c 'git stash && git rebase -i HEAD~2 && git stash pop'
    ri3 = !sh -c 'git stash && git rebase -i HEAD~3 && git stash pop'
    ri4 = !sh -c 'git stash && git rebase -i HEAD~4 && git stash pop'
    ri5 = !sh -c 'git stash && git rebase -i HEAD~5 && git stash pop'
    ri6 = !sh -c 'git stash && git rebase -i HEAD~6 && git stash pop'
    ri7 = !sh -c 'git stash && git rebase -i HEAD~7 && git stash pop'
    ri8 = !sh -c 'git stash && git rebase -i HEAD~8 && git stash pop'
    ri9 = !sh -c 'git stash && git rebase -i HEAD~9 && git stash pop'
    ri10 = !sh -c 'git stash && git rebase -i HEAD~10 && git stash pop'

    # Push
    puf = !sh -c 'git stash && git push -f && git stash pop'
[merge]
    tool = my-meld
[mergetool "my-meld"]
    cmd = git-merge-meld $BASE $LOCAL $REMOTE $MERGED
[push]
    default = simple
[diff]
    tool = meld
[difftool]
    prompt = false
[branch]
    autosetuprebase = always
[http]
    cookiefile = /home/erik/.gitcookies
[pull]
    rebase = true
[push]
    autoSetupRemote = true
